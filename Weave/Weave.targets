<?xml version="1.0" encoding="utf-8" ?>
<Project ToolsVersion="4.0" TreatAsLocalProperty="WeaveAssemblyPath" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <ItemGroup>
    <AvailableItemName Include="WeaveTemplate" /><!-- WeaveTemplate now implies AdditionalFiles -->
    <CompilerVisibleItemMetadata Include="WeaveTemplate" MetadataName="UseSourceGeneration" />
    <CompilerVisibleItemMetadata Include="WeaveTemplate" MetadataName="OutputPath" />
    <CompilerVisibleItemMetadata Include="AdditionalFiles" MetadataName="SourceItemGroup" />
  </ItemGroup>

  <PropertyGroup Condition=" '$(MSBuildRuntimeType)' == 'Core' And '$(WeaveAssemblyPath)' == '' ">
    <WeaveAssemblyPath>$(MSBuildThisFileDirectory)netcoreapp2.0\Weave.dll</WeaveAssemblyPath>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(MSBuildRuntimeType)' != 'Core' And '$(WeaveAssemblyPath)' == '' ">
    <WeaveAssemblyPath>$(MSBuildThisFileDirectory)net461\Weave.exe</WeaveAssemblyPath>
  </PropertyGroup>
  <UsingTask AssemblyFile="$(WeaveAssemblyPath)" TaskName="CompileWeaveTemplate" />

  <Target Name="_InjectWeaveTemplateAdditionalFiles" BeforeTargets="GenerateMSBuildEditorConfigFileShouldRun">
    <!-- Compliant with the technique from https://platform.uno/blog/using-msbuild-items-and-properties-in-c-9-source-generators/ -->
    <ItemGroup>
      <WeaveTemplate Condition=" '%(WeaveTemplate.OutputPath)' == '' ">
        <UseSourceGeneration>true</UseSourceGeneration>
      </WeaveTemplate>
      <WeaveTemplate Condition=" '%(WeaveTemplate.OutputPath)' != '' ">
        <UseSourceGeneration>false</UseSourceGeneration>
      </WeaveTemplate>
      <!-- TODO: Inject _config.weave into build_metadata.WeaveTemplate.UseSourceGeneration, build_metadata.WeaveTemplate.OutputPath, build_metadata.WeaveTemplate.ParentConfigFileExists, or etc. -->
      <AdditionalFiles Include="@(WeaveTemplate)" SourceItemGroup="WeaveTemplate" />
    </ItemGroup>
  </Target>

  <Target Name="_UpdateWeaveTemplatesMetatdata">
    <ItemGroup>
      <WeaveTemplate Condition=" '%(WeaveTemplate.Link)' != '' And '%(WeaveTemplate.OutputPath)' == '' And '%(WeaveTemplate.UseSourceGeneration)' != 'true'">
        <OutputPath>$(IntermediateOutputPath)%(WeaveTemplate.Link).cs</OutputPath>
      </WeaveTemplate>
      <WeaveTemplate Condition=" '%(WeaveTemplate.Link)' == '' And '%(WeaveTemplate.OutputPath)' == '' And '%(WeaveTemplate.UseSourceGeneration)' != 'true' ">
        <OutputPath>$(IntermediateOutputPath)%(WeaveTemplate.Identity).cs</OutputPath>
      </WeaveTemplate>
    </ItemGroup>
  </Target>

  <Target Name="CompileWeaveTemplates" DependsOnTargets="_CompileWeaveTemplates" BeforeTargets="Compile;CoreCompile;Build;CoreBuild" Condition=" '@(WeaveTemplate)' != '' ">
    <ItemGroup>
      <Compile Include="%(WeaveTemplate.OutputPath)" Condition=" '%(WeaveTemplate.OutputPath)' != '' " />
    </ItemGroup>
  </Target>

  <Target Name="CleanWeaveTemplates" DependsOnTargets="_UpdateWeaveTemplatesMetatdata" BeforeTargets="Clean;CoreClean">
    <!-- TODO: Exclude Source-Generated? -->
    <Delete Files="@(WeaveTemplate -> '%(OutputPath)')" ContinueOnError="true" />
  </Target>

  <Target Name="_CompileWeaveTemplates" DependsOnTargets="_UpdateWeaveTemplatesMetatdata" Inputs="$(MSBuildThisFileFullPath);$(MSBuildProjectFile);@(WeaveTemplate)" Outputs="@(WeaveTemplate -> '%(OutputPath)')">
    <!-- TODO: Exclude Source-Generated? -->
    <CompileWeaveTemplate InputFile="%(WeaveTemplate.FullPath)" OutputFile="%(WeaveTemplate.OutputPath)" />
    <Message Text="%(WeaveTemplate.FullPath) -> %(WeaveTemplate.OutputPath)" />
  </Target>
</Project>
